<% provide(:page_title, @post.title) %>
  <% provide(:post_active, "active") %>
    <div class="container">

      <p id="notice">
        <%= notice %>
      </p>
      <div class="card p-5">
        <div class="text-center pb-3 ">
          <small class="font-weight-bold">Today is:
            <%= Time.now.strftime('%B %-d, %Y') %>
          </small>
        </div>

        <div class="text-center">
          <h2 class="font-weight-bold">
            <%= @post.title %>
          </h2>
        </div>
        <div class="mr">
          <small>
            <%= @post.display_day_published %>
          </small>
        </div>
        <hr class="style17 mb-5 mt-0">

        <div class="col-sm-10 text-justify mx-auto">
          <h5 class="body-text">
            <%= sanitize @post.body %>
          </h5>
        </div>
        <hr class="style18 mb-2">

        <% if odogwu_signed_in? %>
          <%= link_to 'Edit', edit_post_path(@post) %> |
            <%= link_to 'Back', posts_path %>
              <% else %>
                <%= link_to 'Back', posts_path %>
                  <% end %>


      </div>
      <div class="disqus m-5">
        <%= render 'posts/disqus' %>
      </div>
    </div>