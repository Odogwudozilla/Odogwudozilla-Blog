<% provide(:page_title, @post.title) %>
  <% provide(:post_active, "active") %>
    <div class="container">


      <div class="card p-5">
        <div class="text-center pb-3 ">
          <small class="font-weight-bold">Today:
            <%= Time.now.strftime('%B %-d, %Y') %>
          </small>
        </div>

        <div class="text-center">
          <h2 class="font-weight-bold">
            <%= @post.title %>
          </h2>
          <h6>Authur: <%= @post.odogwu.firstname %> <%= @post.odogwu.lastname %>
        </div>
        <div class="mr">
          <small>Category:
            <%= link_to @post.category.clan %>

          </small>
        </div>
        <div class="mr">
          <small>
            <%= @post.display_day_published %>
          </small>
        </div>
        <hr class="style17 mb-5 mt-0">

        <div class="col-sm-10 text-justify mx-auto">
          <h6 class="body-text ">
            <%= sanitize @post.body %>
          </h6>
        </div>
        <hr class="style18 mb-2">

        <div class="form-actions">
          <% if odogwu_signed_in? %>
            <div class="pb-4">
              <%= link_to 'Edit', edit_post_path(@post) %> |
                <%= link_to 'Back', posts_path %>
            </div>
            <% else %>
              <div class="pb-4">
                <%= link_to 'Back', posts_path %>
              </div>
              <% end %>
        </div>


      </div>
      <div class="disqus m-5">
        <%= render 'posts/disqus' %>
      </div>
    </div>