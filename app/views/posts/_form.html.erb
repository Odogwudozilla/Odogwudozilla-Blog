<%= simple_form_for @post do |f| %>
  <% f.error_notification %>
    <div class="form-inputs">
      <%= f.input :title, required: false, autofocus: true, placeholder:"Enter title of post" %>
        <%= f.input :preview, required: false, placeholder:"Enter preview" %>
          <%= f.input :body, placeholder:"Your content here" %>
    </div>

    <div class="form-actions tn-primary">
      <%= f.button :submit, "Create Post" %>
    </div>

    <% end %>