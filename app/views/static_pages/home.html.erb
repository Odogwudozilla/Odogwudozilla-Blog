<!DOCTYPE html>
<html>


<head>
  <title>
    <%= yield(:page_title) %> | Odogwudozilla</title>
  <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Marck+Script|Philosopher:400,700|Merriweather:400,400i,700|Montserrat:300,400,700"
      rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>


</head>

<body>

  <%= render 'layouts/navbar' %>

    <div class="container wrapper <%= controller_name %> <%= action_name %>">
      <% if flash.any? %>
        <% flash.keys.each do |key| %>
          <div class="alert alert-<%= key.to_s %> alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[key] %>
          </div>
          <% end %>
            <% end %>
              <div class="row row-home">
                <div class="card-deck">
                  <div class="card col-sm-8 card-home border-dark mt-auto">
                    <div class="card-body">
                      <h4 class="card-title">Title</h4>
                      <p class="card-text">My name is Chidozie Nnachor. I am a developer hoping to someday change the world with good intentions</p>
                    </div>
                  </div>

                  <!-- <div class="card col-sm-2">
                    <span>vertical line</span>
                  </div> -->
                  <div class="card col-sm-2 col-auto">black board</div>
                </div>
              </div>
    </div>
    <%= yield %>
      </div>


      <%= render 'layouts/footer' %>
</body>


</html>